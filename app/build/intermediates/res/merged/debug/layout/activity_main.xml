<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1"
    android:background="@drawable/backg3">

    <TextView
        android:text="Send Free SMS"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textView"
        android:gravity="center"
        android:layout_weight="0.14"
        android:textSize="40dp"
        android:textAppearance="@style/TextAppearance.AppCompat.Display2" />

    <Button
        android:text="fullonsms"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:id="@+id/button2"
        android:textColor="#0000FF"
        android:textSize="20dp"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:onClick="Mainactivity1view"
        android:layout_weight="0.14" />

    <Button
        android:text="160by2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/button"
        android:layout_marginTop="30dp"
        android:layout_weight="0.14"
        android:elevation="13dp"
        android:onClick="Mainactivity2view"
        android:textColor="#0000FF"
        android:textSize="20dp"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:background="@android:drawable/btn_default" />

    <Button
        android:text="way2sms"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:id="@+id/button3"
        android:textColor="#0000FF"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:textSize="20dp"
        android:onClick="Mainactivity3view"
        android:layout_weight="0.14" />
</LinearLayout>